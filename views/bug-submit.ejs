<form class="bug-form" action="/bug-submit" method="post">
    <div class="form-group">
      <label for="exampleInputEmail1">Bug title</label>
      <input name="title" type="text" class="form-control" id="bug-title" placeholder="Enter the title of the bug" required>
      
    </div>
    <div class="form-group">
        <label for="bug-form-textArea">Description of the bug</label>
        <textarea name="body" required style="resize: none;" class="form-control" id="bug-form-textArea" rows="3" placeholder="Describe the bug in a few words..."></textarea>
      </div>
    <p style="text-align:center"><button type="submit" style="margin-top: 2rem;" class="btn-submit btn btn-primary">Submit</button></p>
  </form>
  <p><a href="/" class="btn-home btn btn-lg">Home</a></p>



